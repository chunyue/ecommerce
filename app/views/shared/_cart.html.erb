    <div class="cart">
      <h1>cart</h1>
      <hr>
      <% current_cart.cart_items.each do |item| %>
      <div>
        <%= image_tag item.product.image, :style => "width: 100px" %>
        <div class="cart-item-info">
          <h3><%= item.product.name %></h3>
          $ <%= item.product.price %> <br>
          <%= item.quantity %>
        </div>
      </div>
      <% end %>
      <hr> 
      <div>SUBTOTAL </div>
      <br>
      <div class="btn btn-default" >
        <%= link_to 'View Cart' %>
      </div>    
    </div>