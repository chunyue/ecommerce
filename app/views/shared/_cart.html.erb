    <div class="cart">
      <h1>cart</h1>
      <hr>
      <div class="item-list">
        <% current_cart.cart_items.each do |item| %>
        <%= render partial: "shared/item", locals: {item: item} %>
        <% end %>
      </div>
      <hr> 
      <div>SUBTOTAL 
        <h5 class="amount">$ <%= current_cart.cart_add_all %></h5>
      </div>
      <br>
      <div class="btn btn-default" >
        <%= link_to 'View Cart', cart_path(current_cart),method: :get %>
      </div>    
    </div>