<div class="container">

  <div class="row">

    <div class="productItems col-md-10 clearfix">
     <% @products.each do |product| %> 

      <div class="item" style="float: left; width: 19%; height: 200px" >
         
        <div class="productPic">
          <%= image_tag product.image, height: '50px' if product.image? %>
        </div>

        <div class="productInfo" style="height: 100px">
          <%= product.name %>
          <br>
          <%= product.description.first(25) %>
          <br>
          NT$ <%= product.price %>            
        </div>

        <div class="addButton btn btn-default" style="height: 30px">
          <%= link_to 'Add to Cart' %>
        </div>

      </div>
      <% end %>
    </div>  
    

    <div class="cart col-md-2">
      <h1>cart</h1>
      <hr>

      <hr> 
      <div>SUBTOTAL </div>
      <br>
      <div class="btn btn-default" >
        <%= link_to 'View Cart' %>
      </div>    
    </div>
    <div>
      <%= paginate @products %>
    </div>  
  </div>
  
</div>