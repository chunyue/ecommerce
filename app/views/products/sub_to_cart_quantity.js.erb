<% item = current_cart.find_item_by(@product) %>;
 <% if item.nil?  %>
  $('.cart-<%= @product.id %>-item').remove();
  $('.amount').text('$ <%= current_cart.cart_add_all %>');
 <% else %>
  $('.cart-<%= item.product.id %>-qty').text('數量: <%= item.quantity %>');
  $('.amount').text('$ <%= current_cart.cart_add_all %>');
<% end %>  