<% if @product.errors.any? %>
  <h2>We have some errors here!</h2>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>  

<h1>Add New Product</h1>
<%= form_for [:admin, @product] do |p| %>
  <%= p.label :name, "Name" %>
  <%= p.text_field :name %>

  <%= p.label :image, "Image" %>
  <%= p.text_field :image %>

  <%= p.label :description, "Description" %>
  <%= p.text_area :description %>

  <%= p.label :price, "Price" %>
  <%= p.text_field :price %>

  <%= p.submit %>  
<% end %>