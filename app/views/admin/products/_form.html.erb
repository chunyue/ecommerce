<%= form_for [:admin, @product] do |p| %>
  <%= p.label :name, "Name" %>
  <%= p.text_field :name %>

  <%= p.label :image, "Image" %>
  <%= p.text_field :image %>

  <%= p.label :description, "Description" %>
  <%= p.text_area :description %>

  <%= p.label :price, "Price" %>
  <%= p.text_field :price %>

  <%= p.submit %>  
<% end %>