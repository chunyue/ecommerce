<%= form_for [:admin, @product] do |p| %>
  <%= p.label :name, "Name" %>
  <%= p.text_field :name %>

  <%= p.label :image, "Photo" %>
  <%= image_tag @product.image, width: '300px' if @product.image? %>
  <%= p.file_field :image %>

  <%= p.label :description, "Description" %>
  <%= p.text_area :description %>

  <%= p.label :price, "Price" %>
  <%= p.text_field :price %>

  <%= p.submit %>  
<% end %>