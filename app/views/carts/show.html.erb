<div class="container">
  <div class="row">
    <div class="cart-item-list">
        <table class="table table-hover">
          <caption><h2>shopping List</h2></caption>
          <tr>
            <thead>
              <td></td>
              <td>Price</td>
              <td>Quantity</td>
              <td>Subtotal</td>
              <td></td>
            </thead>
          </tr>
          <% @items.each do |item| %>
          <tbody>
            <tr class="cart-<%= item.product.id %>-item">
              <td>
                <%= image_tag item.product.image, height: '50px', display: 'inline-block' %>
                <%= item.product.name %>
              </td>
              <td><%= item.product.price %></td>
              <td><%= item.quantity %></td>
              <td>$ <%= item.product.price * item.quantity %></td>
              <td><%= link_to '', remove_item_product_path(item.product), method: :delete, remote: true, class: "glyphicon glyphicon-trash" %>
              </td>  
            </tr>
            <% end %>
            <tr>
              <td></td>
              <td>Subtotal</td>
              <td></td>
              <td class="amount">$ <%= @cart.cart_add_all %> </td>
              <td></td>
            </tr>
          </tbody>  
        </table>
      
    </div>
    <div class="cart-shipping-info">
      
    </div>
  </div>
  
</div>
